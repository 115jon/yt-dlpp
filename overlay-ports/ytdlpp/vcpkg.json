{
  "name": "ytdlpp",
  "version": "0.1.0",
  "description": "A C++ YouTube video/audio downloader library",
  "homepage": "https://github.com/yourusername/yt-dlpp",
  "license": "MIT",
  "supports": "!uwp",
  "dependencies": [
    {
      "name": "certify",
      "default-features": false
    },
    "fmt",
    "nlohmann-json",
    "quickjs-ng",
    "spdlog",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "zlib"
  ],
  "features": {
    "boost": {
      "description": "Build Boost from source (disable for system Boost)",
      "dependencies": [
        "boost-asio",
        "boost-beast",
        "boost-charconv",
        "boost-filesystem",
        "boost-program-options",
        "boost-regex",
        "boost-scope-exit",
        "boost-outcome",
        "boost-url",
        {
          "name": "certify",
          "default-features": false,
          "features": [
            "boost"
          ]
        }
      ]
    },
    "openssl": {
      "description": "Build OpenSSL from source (disable for system OpenSSL)",
      "dependencies": [
        {
          "name": "certify",
          "default-features": false,
          "features": [
            "openssl"
          ]
        }
      ]
    },
    "ffmpeg": {
      "description": "Build FFmpeg from source (disable for system FFmpeg)",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": [
            "avcodec",
            "avformat",
            "swresample",
            "swscale",
            "openssl"
          ]
        }
      ]
    }
  }
}