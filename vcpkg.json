{
  "name": "yt-dlpp",
  "version": "0.1.0",
  "description": "A C++ YouTube video/audio downloader library",
  "dependencies": [
    {
      "name": "certify",
      "default-features": false
    },
    "fmt",
    "nlohmann-json",
    "spdlog",
    "v8",
    "zlib"
  ],
  "features": {
    "boost": {
      "description": "Build Boost from source via vcpkg (disable to use system Boost)",
      "dependencies": [
        "boost-asio",
        "boost-beast",
        "boost-charconv",
        "boost-filesystem",
        "boost-program-options",
        "boost-regex",
        "boost-scope-exit",
        "boost-outcome",
        "boost-url",
        {
          "name": "certify",
          "default-features": false,
          "features": [
            "boost"
          ]
        }
      ]
    },
    "openssl": {
      "description": "Build OpenSSL from source via vcpkg (disable to use system OpenSSL)",
      "dependencies": [
        {
          "name": "certify",
          "default-features": false,
          "features": [
            "openssl"
          ]
        }
      ]
    },
    "ffmpeg": {
      "description": "Build FFmpeg from source via vcpkg (disable to use system FFmpeg)",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": [
            "avcodec",
            "avformat",
            "swresample",
            "swscale",
            "openssl"
          ]
        }
      ]
    }
  },
  "default-features": [
    "boost",
    "openssl",
    "ffmpeg"
  ]
}